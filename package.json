{
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "format": "prettier --write src/*",
    "check:formatting": "prettier --check src/*",
    "check:types": "tsc --noEmit",
    "check:addon": "npm run package && addons-linter dist/extension.zip",
    "check": "npm run check:formatting && npm run check:types && npm run check:addon",
    "package": "npm run build && zip dist/extension.zip assets/* manifest.json dist/content-script.js *.md"
  },
  "license": "MIT",
  "dependencies": {
    "@github/markdownlint-github": "^0.4.0",
    "markdownlint": "^0.28.1"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-env": "^7.21.4",
    "@babel/preset-typescript": "^7.21.4",
    "babel-loader": "^9.1.2",
    "prettier": "^2.8.7",
    "ts-loader": "^9.4.2",
    "typescript": "^5.0.4",
    "webpack": "^5.80.0",
    "webpack-cli": "^5.0.1",
    "addons-linter": "6.3.0"
  }
}
